@model B2WTI.PCFTI.INFRAESTRUTURA.TRANSVERSAL.DTO.Modulo.Sistema.ViewModel.UsuarioView
@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Criar novo Usuário</h5>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm())
                {
                    Html.EnableClientValidation(true);

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                            <div class="col-sm-10">
                                <div class="checkbox i-checks">
                                    <label class="">
                                        <div class="icheckbox_square-green" style="position: relative;">
                                            @Html.EditorFor(model => model.Ativo)
                                            <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: none repeat scroll 0% 0% rgb(255, 255, 255); border: 0px none; opacity: 0;"></ins>
                                        </div><i></i>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-check"></i>Cadastrar o novo Usuario</button>
                            </div>
                        </div>

                    </div>
                }

                <div>
                    @Html.ActionLink("Voltar", "Index")
                </div>



            </div>
        </div>
    </div>
</div>